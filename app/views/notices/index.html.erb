<%- model_class = Notice -%>
<div class="page-header">
  <h1 class="text-success"><%= I18n.t("notices.titles.index") %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th class="text-error"><%= I18n.t("notices.title") %></th>
      <th class="text-info"><%= I18n.t("notices.date") %></th>
      <th class="text-error">Person</th>
      <th></th>
    </tr>
  </thead>
  <tbody class="table table-hover table-striped">
    <% @notices.each do |notice| %>
      <tr class="info">
        <td><%= link_to notice.title, notice_path(notice), :class => "btn btn-link" %></td>
        <td><%= notice.date %></td>
        <td><%= notice.person_id %></td>
        <td>
          <%= link_to I18n.t('.show', :default => t("helpers.links.edit")),
                      notice_path(notice), :class => 'btn btn-mini btn-info' %>
          <%= link_to I18n.t('.edit', :default => t("helpers.links.edit")),
                      edit_notice_path(notice), :class => 'btn btn-mini btn-inverse' %>
          <%= link_to I18n.t('.destroy', :default => t("helpers.links.destroy")),
                      notice_path(notice),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to I18n.t('.new', :default => t("helpers.links.new")),
            new_notice_path,
            :class => 'btn btn-success' %>
