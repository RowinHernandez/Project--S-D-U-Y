<%- model_class = Rail -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<table class="table table-bordered">
  <tr>
    <td>
      <dt><legend><%= model_class.human_attribute_name(:title) %>:</legend></dt>
      <dd><%= @rail.title %></dd>
    </td>
    <td>  
      <dt><legend><%= model_class.human_attribute_name(:body) %>:</legend></dt>
      <dd><%= @rail.body %></dd>
    </td>
  </tr>
  <tr>
    <td>
      <dt><legend><%= model_class.human_attribute_name(:date) %>:</legend></dt>
      <dd><%= @rail.date %></dd>
    </td>
    <td>
    </td>
  </tr>
</table>

<div class="form-actions">
  <%= link_to I18n.t('.new', :default => t("helpers.links.new")),
            new_rail_path,
            :class => 'btn btn-primary btn-success' %>
  <%= link_to I18n.t('.back', :default => t("helpers.links.back")),
              rails_path, :class => 'btn btn-inverse'  %>
  <%= link_to I18n.t('.edit', :default => t("helpers.links.edit")),
              edit_rail_path(@rail), :class => 'btn btn-info' %>
  <%= link_to I18n.t('.destroy', :default => t("helpers.links.destroy")),
              rail_path(@rail),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
