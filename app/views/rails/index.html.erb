<%- model_class = Rail -%>
<div class="page-header">
  <h1 class="text-success"><%= I18n.t("rails.titles.index") %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th class="text-error"><%= I18n.t("rails.title") %></th>
      <th class="text-info"><%= I18n.t("rails.date") %></th>
      <th></th>
    </tr>
  </thead>
  <tbody class="table table-hover table-striped">
    <% @rails.each do |rail| %>
      <tr class="info">
        <td><%= link_to rail.title, rail_path(rail), :class => "btn btn-link" %></td>
        <td><%= rail.date %></td>
        <td>
          <%= link_to I18n.t('.show', :default => t("helpers.links.edit")),
                      rail_path(rail), :class => 'btn btn-mini btn-info' %>
          <%= link_to I18n.t('.edit', :default => t("helpers.links.edit")),
                      edit_rail_path(rail), :class => 'btn btn-mini btn-inverse' %>
          <%= link_to I18n.t('.destroy', :default => t("helpers.links.destroy")),
                      rail_path(rail),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to I18n.t('.new', :default => t("helpers.links.new")),
            new_rail_path,
            :class => 'btn btn-success' %>
