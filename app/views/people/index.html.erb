<%- model_class = Person -%>
<div class="page-header">
  <h1><%= I18n.t('people.title.index') %></h1>
</div>
<table class="table table-striped">

  <thead>
    <tr>
      <th class="text-success"><%= I18n.t('people.avatar') %></th>
      <th class="text-info"><%= I18n.t('people.name') %></th>
      <th class="text-success"><%= I18n.t('people.surname') %></th>
      <th class="text-info"><%= I18n.t('people.email') %></th>
      <th class="text-success"><%= I18n.t('people.phone') %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @people.each do |person| %>
      <tr class="success">
        <td><%= image_tag(person.avatar) %></td>
        <td><%= person.name %></td>
        <td><%= person.surname %></td>
        <td><%= person.email %></td>
        <td><%= person.phone %></td>
        <td>
          <%= link_to I18n.t('show', :default => t("helpers.links.show")),
                      person_path(person), :class => 'btn btn-mini btn-info' %>
          <%= link_to I18n.t('edit', :default => t("helpers.links.edit")),
                      edit_person_path(person), :class => 'btn btn-mini btn-inverse' %>
          <%= link_to I18n.t('destroy', :default => t("helpers.links.destroy")),
                      person_path(person),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to I18n.t(("new"), :default => t("helpers.links.new")),
            new_person_path,
            :class => 'btn btn-success' %>
